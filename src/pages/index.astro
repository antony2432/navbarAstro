---
import PrincipalLayout from "../layouts/principalLayout.astro";
import "./style.css";

const props = {
  title: "Inicio - Antony CH DEV",
  description:
    "Programador web versátil y apasionado por las metodologías ágiles. Experto en una amplia gama de tecnologías para crear experiencias digitales impactantes y funcionales. Descubre mi portafolio para explorar proyectos innovadores y soluciones desarrolladas con destreza técnica y enfoque ágil.",
  key_words:
    "React, Next.js, Nest.js, Node.js, SQL, PostgreSQL, desarrollo web, programación web, metodologías ágiles, frontend, backend, experiencia de usuario, diseño web, HTML, CSS, JavaScript, Scrum, Kanban, gestión de proyectos, portafolio de proyectos, aplicaciones web, optimización web",
};
---

<PrincipalLayout
  title={props.title}
  description={props.description}
  key_words={props.key_words}
>
  <main>
    <section class="presentation">
      <h1 class="title-presentation">
        Antony CH, Full stack<br />
         Developer
      </h1>
      <p class="description-presentation">
        Apasionado Full Stack Developer, especializado en React, Next.js y
        Nest.js para soluciones innovadoras y crecimiento profesional continuo
      </p>
      <a href="#" class="btn-about"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="25"
          height="25"
          fill="currentColor"
          class="arrow-down"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"
          ></path>
        </svg>
      </a>
    </section>
    <section class="second-part">
      <section class="card">
        <h2 class="title-card">SOBRE MI</h2>
        <p class="description-card">
          Soy un apasionado estudiante de desarrollo de software y Full Stack
          Developer en crecimiento, comprometido con la aplicación y mejora
          continua de mis habilidades técnicas
        </p>
        <a href="#" class="button-card">
          <span>Leer mas</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            fill="currentColor"
            class="rigth-arrow"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"
            ></path>
          </svg>
        </a>
      </section>
      <hr class="divider" />
      <section class="card">
        <h2 class="title-card">SOBRE MI</h2>
        <p class="description-card">
          Soy un apasionado estudiante de desarrollo de software y Full Stack
          Developer en crecimiento, comprometido con la aplicación y mejora
          continua de mis habilidades técnicas
        </p>
        <a href="#" class="button-card">
          <span>Leer mas</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            fill="currentColor"
            class="rigth-arrow"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"
            ></path>
          </svg>
        </a>
      </section>
      <hr class="divider" />
    </section>
  </main>
</PrincipalLayout>
